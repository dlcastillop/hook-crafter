{
  "name": "hook-crafter",
  "description": "A template for creating a React hook library",
  "repository": {
    "type": "git",
    "url": "https://github.com/dlcastillop/hook-crafter"
  },
  "keywords": [
    "react",
    "hooks",
    "library",
    "template",
    "typescript",
    "javascript",
    "vite"
  ],
  "author": "Daniel Castillo <dlcastillo3015@gmail.com>",
  "license": "MIT",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist/hook-crafter.umd.js",
  "module": "dist/hook-crafter.es.js",
  "types": "dist/hook-crafter.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-plugin-dts": "^3.5.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "exports": {
    ".": {
      "import": {
        "default": "./dist/hook-crafter.es.js",
        "types": "./dist/hook-crafter.d.ts"
      },
      "require": {
        "default": "./dist/hook-crafter.umd.js",
        "types": "./dist/hook-crafter.d.ts"
      }
    }
  },
  "files": [
    "dist",
    "package.json"
  ]
}
